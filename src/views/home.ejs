<%- include('partials/header') %>
<%- include('partials/flash') %>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const params = new URLSearchParams(window.location.search);
    if (params.get('contact')) {
        // Remove the query parameter from the URL without scrolling
        window.history.replaceState({}, document.title, window.location.pathname);
    }
});
</script>
<main>
    <h1>Welcome to the Sun Shop</h1>
    <div class="coverPhoto">
    <picture>                
        <source media="(max-width: 600px)" srcset="/images/flowerdisplay_small.webp 750w" sizes="750px" />
        <source media="(max-width: 900px)" srcset="/images/flowerdisplay_small.webp 1000w" sizes="1000px" />
        <img src="/images/flowerdisplay_large.webp" 
             srcset="/images/flowerdisplay_large.webp 1200w"
             sizes="1200px"
             alt="Beautiful flower display" />
    </picture>    
    <button onclick="window.location.href='/flowers'">Order Now</button>
</div>
<p>The place to be when ordering a bouquet of flowers</p>

<!-- Contact Form Section -->
<section id="contact" class="contact-section">
    <div class="container">
        <h2>Contact Us</h2>
        <p>Have questions about our flowers or need help with your order? Send us a message!</p>
        
        <div class="contact-form-container">
            <form action="/contact/submit" method="POST" class="contact-form">
                <div class="form-group">
                    <label for="name">Name *</label>
                    <input type="text" id="name" name="name" required>
                </div>
                
                <div class="form-group">
                    <label for="email">Email *</label>
                    <input type="email" id="email" name="email" required>
                </div>
                
                <div class="form-group">
                    <label for="subject">Subject *</label>
                    <input type="text" id="subject" name="subject" required>
                </div>
                
                <div class="form-group">
                    <label for="message">Message *</label>
                    <textarea id="message" name="message" rows="5" required></textarea>
                </div>
                
                <button type="submit" class="btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</section>
</main>
<%- include('partials/footer') %>